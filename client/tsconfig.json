{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"baseUrl": ".",
		"jsx": "react",
		"allowJs": true,
		"paths": {
			"root/*": [
				"src/*"
			],
			"style/*": [
				"src/style/*"
			],
		},
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"./public/**/*",
		"./node_modules/**/*",
	]
}
